
<div class="banner-new">
  <h1>New cocktail</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name, wrapper_html: { class: 'banner-description' } %>
    <%= f.submit "submit", class: "btn btn-primary" %>
  <% end %>
  <h3><%= link_to 'back', :back %></h3>
  <h3><%= link_to "All cocktails", cocktails_path, method: :get%></h3>
</div>
